{
  "name": "slack-robot",
  "version": "3.2.1",
  "description": "Simple robot for your slack integration",
  "main": "index.js",
  "scripts": {
    "lint": "marlint src/**/*.js",
    "unit": "mocha --compilers js:babel-core/register",
    "unit:all": "npm run unit test/**/**/*.js",
    "test": "npm run lint && npm run unit:all",
    "coverage": "nyc npm run unit:all && nyc report --reporter=html",
    "upload-coverage": "nyc npm run unit:all && nyc report --reporter=lcov && codecov",
    "prepublish": "babel -d lib/ src/"
  },
  "files": [
    "index.js",
    "README.md",
    "lib/"
  ],
  "marlint": {
    "ignores": [
      "lib/*.js",
      "tests/*.js"
    ],
    "rules": {
      "no-fallthrough": 0
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/traveloka/slack-robot.git"
  },
  "keywords": [
    "slack",
    "robot"
  ],
  "author": "Fatih Kalifa <fatihkalifa@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/traveloka/slack-robot/issues"
  },
  "homepage": "https://github.com/traveloka/slack-robot#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "codecov": "^1.0.1",
    "marlint": "^1.1.0",
    "mocha": "^2.2.5",
    "nock": "^5.2.1",
    "nyc": "^5.3.0",
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "async": "^1.5.2",
    "bluebird": "^2.9.34",
    "eventemitter3": "^1.1.1",
    "lodash": "^4.0.0",
    "log": "^1.4.0",
    "request": "^2.67.0",
    "slack-client": "^2.0.0-beta.9",
    "uuid": "^3.0.0"
  }
}
